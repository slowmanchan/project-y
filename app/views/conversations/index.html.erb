<div class="inbox-box">
  <div class="row">
    <div class="small-12 medium-4 large-4 columns">
      <%= render "conversations", conversations: @conversations %>
    </div>
    <div class="small-12 medium-8 large-8 columns">
      <div id="inbox-messages">
        <div id="messages-box">
          <div id="message">
            <% @conversations.first.messages.order('created_at ASC').each do |message| %>
              <%= render 'messages/message', message: message %>
            <% end %>
          </div>
        </div>
        <%= render 'messages/form', conversation: @conversations.first,
                                    message: @message %>
      </div>
    </div>
  </div>
</div>
