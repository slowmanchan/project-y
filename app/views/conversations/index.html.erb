<div class="inbox-box">
  <div class="row">
    <div class="small-12 medium-4 large-4 columns">
      <div class="conversations">
        <ul>
          <li>
            <h4>Chats</h4>
          </li>
          <% @conversations.each do |conversation| %>
            <% user_status = current_user.id == conversation.sender.id ? conversation.recipient : conversation.sender %>
            <li>
              <%= link_to conversation_messages_path(conversation), remote: true do %>
                <%= gravatar_for(user_status, size: 30) %>
                <span> <%= user_status.email %></span>
              <%end%>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
    <div class="small-12 medium-8 large-8 columns">
      <% messages = @conversations.first.messages %>
      <div id="inbox-messages">
        <div id="messages-box">
          <div id="message">
            <% messages.each do |message| %>
              <%= render 'messages/message', message: message %>
            <% end %>
          </div>
        </div>
        <div class="message-form">
          <%= simple_form_for([@conversations.first, @message], remote: true, html: {id: 'message-form'}) do |f| %>
            <div class="row collapse">
              <div class="small-9 columns">
                <%= f.input :body, placeholder: 'Enter your message', as: 'string', label: false, input_html: {autofocus: true} %>
                <%= f.hidden_field :user_id, value: current_user.id  %>
              </div>
              <div class="small-3 columns">
                <%= f.submit 'send',class: 'button postfix'%>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
