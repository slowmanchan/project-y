<div class="projects">
  <div class="banner">
    <div class="row">
      <div class="small-8 columns">
        <h1>PROJECTS</h1>
      </div>
      <div class="small-4 columns">
        <%= link_to "New project", new_project_path, class: "button" %>
      </div>
    </div>
  </div>
  <div class="down-arrow">
  </div>
</div>
<div class="row">
  <div class="small-12 medium-12 large-8 columns">
    <ul class="tabs" data-tabs id="example-tabs">
      <li class="tabs-title is-active"><a href="#panel1" aria-selected="true">Latest</a></li>
      <li class="tabs-title"><a href="#panel2">Difficulty </a></li>
    </ul>
    <div class="tabs-content" data-tabs-content="example-tabs">
      <div class="tabs-panel is-active" id="panel1">
        <% @projects.each do |project| %>
        <div class="callout">
          <div class='row'>

            <div class="columns small-9">
              <h4><%= link_to project.title, project %></h4>
              <p><%= project.description %></p>
              <p><%= link_to project.user.email, project.user %> | <time><%= time_ago_in_words(project.created_at) %> ago</time></p>
              <p><%= raw(project.tag_list.map { |t| link_to t, tag_path(t), class: "label"}.join(' ')) %></p>
            </div>
            <div class="secondary-projects-panel">
              <div class="columns small-3">
                <div class="callout">
                  <p><% project.level.times do %>
                    <i class="fa fa-star"></i>
                    <% end %>
                  </p>
                  <p>ideas: <%= project.ideas.count %></p>
                  <% if project.help %><span class="alert label">Need help</span><% end %>

                  <p class="likes-icon" id="project_<%= project.id %>_likes"><%= render 'likes', project: project %></p>
                </div>
              </div>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="small-4 columns">
    <div class="callout">
      <h4>Popular tags</h4>
      <div id="tag_cloud">
        <% tag_cloud Project.tag_counts, %w{s m l} do |tag, css_class| %>
        <%= link_to tag.name, tag_path(tag.name), class: css_class %>
        <% end %>
      </div>
    </div>
    <div class="callout">
      <h4>Projects near you</h4>
    </div>
    <div class="callout">
      <h4>Top Users</h4>
      <ul id="top-users">
      <% @users.each do |user| %>
        <li><%= link_to user.email, user_path(user) %>(<%= user.ideas_count %>)</li>
      <% end %>
    </ul>
    </div>

  </div>
</div>
</div>
</div>
