<div class="banner">
  <div class="row">
    <div class="small-12 small-8 columns">
      <h1>PLANNER</h1>
    </div>
  </div>
</div>
<div class="down-arrow">
</div>

<div class="row">
  <div class="small-12 large-8 columns">
    <%= render "calendar", meetings: @meetings %>
  </div>
  <div class="small-12 large-4 columns">
    <table>
      <thead>
        <tr>
          <th>name</th>
          <th>start time</th>
          <th>end time</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @meetings.each do |meeting| %>
        <tr>
          <td><%= link_to meeting.name, meeting %></td>
          <td><%= meeting.start_time.strftime("%^b %e/%y %l:%m %p") %></td>
          <td><%= meeting.end_time.strftime("%^b %e/%y %l:%m %p") %></td>
          <td><%= link_to  edit_meeting_path(meeting) do %><i class="fa fa-pencil-square-o"></i><% end %></td>
          <td><%= link_to meeting, method: :delete, data: { confirm: 'are you sure?' } do %><i class="fa fa-trash-o"></i><% end %></td>
        </tr>
        <% end %>
      </tbody>
    </table>

    <br>

  </div>
</div>
